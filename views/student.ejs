<!DOCTYPE html>
<html>
	<head>
    		<title>论文打分系统学生管理界面</title>
    		<script src="//cdn.bootcss.com/jquery/2.2.1/jquery.min.js"></script>
    		<link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" rel="stylesheet">
		<link href="stylesheets/layoutit.css" rel="stylesheet">
    		<link href="stylesheets/bootstrap-combined.min.css" rel="stylesheet">
    		<script src="//cdn.bootcss.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js"></script>
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<meta charset="UTF-8">
  	</head>
  	<body>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span8">
			 		<span class="badge" id="studentId">学生ID</span>
					<h3>
						个人信息
					</h3>
					<ul id="info">
					</ul>
					<form method="post" action="/student/upload" enctype="multipart/form-data">
						<fieldset>
					 	<legend>上传文件</legend> 
    						<input type="file" name="files" multiple/><br><br>
						<button type="submit" class="btn">提交</button>
						</fieldset>
					</form>
				</div>
				<div class="span4">
					<h3>
					留言板
					</h3>
					<!-- 多说评论框 start -->
					<div class="ds-thread" data-thread-key="0000" data-title="留言板" data-url=""></div>
					<!-- 多说评论框 end -->
					<!-- 多说公共JS代码 start (一个网页只需插入一次) -->
					<script type="text/javascript">
					var duoshuoQuery = {short_name:"greatji"};
					(function() {
						var ds = document.createElement('script');
						ds.type = 'text/javascript';ds.async = true;
						ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
						ds.charset = 'UTF-8';
						(document.getElementsByTagName('head')[0] 
		 				|| document.getElementsByTagName('body')[0]).appendChild(ds);
						})();
					</script>
					<!-- 多说公共JS代码 end -->
				</div>
			</div>
		</div>
  	</body>
</html>
<script>
	$(document).ready(function(){
		$.get("/student/getStudentInfo",
  			function(data,status){
				for (i in data)
    				$("#info").append('<li>'+i+' : '+data[i]+'</li>');
				$.get("/student/getId", 
					function(data, status){
						$('#studentId').text(data);
					});
  			});
	});
</script>
